FLASK_APP=app:create_app
FLASK_DEBUG=0
SECRET_KEY=
# 模板：mysql+pymysql://用户名:密码@主机:端口/数据库名
# 示例：mysql+pymysql://root:yourpassword@localhost:3306/flask_app
DATABASE_URL=mysql+pymysql://root:yourpassword@localhost:3306/flask_app

# JWT（必填）
JWT_SECRET_KEY=jwtsecretkey
JWT_REFRESH_SECRET_KEY=jwtrefreshsecretkey

# 邮箱验证码（可选）
# VERIFICATION_CODE_EXPIRE_SECONDS=300
# VERIFICATION_CODE_RESEND_COOLDOWN_SECONDS=60

# Flask-Mail / SMTP（可选，不配则仅控制台输出验证码）
MAIL_SERVER=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
# MAIL_USE_TLS=true
# MAIL_DEFAULT_FROM_NAME=Dublin Bikes

# 前端激活链接基础 URL（可选，用于邮件中的激活链接）
FRONTEND_BASE_URL=

# OpenWeatherMap API（必填，用于天气预报）
OPENWEATHER_API_BASE_URL=https://api.openweathermap.org/data/3.0/onecall
OPENWEATHER_API_KEY=
